{{#if hasBlock}}
{{#each content as |item|}}
{{yield
	(component "radio-btn"
		name=name
		value=(get item optionValuePath)
		checked=item.checked
		disabled=item.disabled
		onClick=(action "btnClicked")
	)
	(get item optionLabelPath)
	(get item optionValuePath)
}}
{{/each}}
{{else}}
{{#each content as |item|}}
{{#component "radio-btn"
	name=name
	value=(get item optionValuePath)
	checked=item.checked
	disabled=item.disabled
	onClick=(action "btnClicked")
}}{{get item optionLabelPath}}{{/component}}
{{/each}}
{{/if}}