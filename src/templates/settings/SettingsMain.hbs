<fieldset>
{{#settings-row
	"Language"
	"Select the GUI language."
	icon="fa-language"
}}
	{{#drop-down
		value=model.gui.language
		content=languages
		as |item|
	}}
		<li class="{{if item.selected 'selected'}}" {{action item.action bubbles=false}}>
			{{flag-icon lang=item.value withCursor=false}} {{item.label}}
		</li>
	{{/drop-down}}
{{/settings-row}}

{{#settings-row
	"Settings and features"
	"Enable hidden settings and features.<br>Does not only apply to the settings menu."
	icon="fa-unlock-alt"
}}
	{{check-box "Enable advanced settings and features" checked=model.advanced}}
{{/settings-row}}
</fieldset>

<fieldset>
{{#settings-row
	"Home page"
	"Menu to load first or when clicking the logo."
	icon="fa-home"
}}
	<em class="small">See the menu bar in the top right corner of each page.<br>Click the home button to make it the new home page.</em>
{{/settings-row}}

{{#settings-row
	"Theme"
	"Select a GUI color theme."
	icon="fa-paint-brush"
}}
	{{drop-down
		value=model.gui.theme
		content=themes
	}}
{{/settings-row}}

{{#settings-row
	"Scrolling"
	"Enable or disable smooth scrolling."
	icon="fa-arrows-alt"
}}
	{{check-box "Enable smooth scrolling" checked=model.gui.smoothscroll}}
{{/settings-row}}

{{#if model.advanced}}
	{{#settings-row
		"Command line actions"
		"Listen to signals sent by second application instances."
		icon="fa-terminal"
		notes="See the wiki for a list of available actions and parameters."
	}}
		{{check-box "Allow external commands" checked=model.gui.externalcommands}}
	{{/settings-row}}
{{/if}}
</fieldset>