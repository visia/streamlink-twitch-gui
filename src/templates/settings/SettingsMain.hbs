<fieldset>
{{#settings-row
	(t "settings.main.language.title")
	(t "settings.main.language.description")
	icon="fa-language"
}}
	{{#drop-down
		value=model.gui.language
		content=languages
		as |item|
	}}
		<li class="{{if item.selected 'selected'}}" {{action item.action bubbles=false}}>
			{{flag-icon lang=item.value withCursor=false}} {{item.label}}
		</li>
	{{/drop-down}}
{{/settings-row}}

{{#settings-row
	(t "settings.main.advanced.title")
	(t "settings.main.advanced.description")
	icon="fa-unlock-alt"
}}
	{{check-box
		(t "settings.main.advanced.checkbox")
		checked=model.advanced
	}}
{{/settings-row}}
</fieldset>

<fieldset>
{{#settings-row
	(t "settings.main.homepage.title")
	(t "settings.main.homepage.description")
	icon="fa-home"
}}
	<em class="small">
		{{t "settings.main.homepage.text.first"}}<br>
		{{t "settings.main.homepage.text.second"}}
	</em>
{{/settings-row}}

{{#settings-row
	(t "settings.main.theme.title")
	(t "settings.main.theme.description")
	icon="fa-paint-brush"
}}
	{{drop-down
		value=model.gui.theme
		content=themes
	}}
{{/settings-row}}

{{#settings-row
	(t "settings.main.scrolling.title")
	(t "settings.main.scrolling.description")
	icon="fa-arrows-alt"
}}
	{{check-box
		(t "settings.main.scrolling.checkbox")
		checked=model.gui.smoothscroll
	}}
{{/settings-row}}

{{#if model.advanced}}
	{{#settings-row
		(t "settings.main.externalcommands.title")
		(t "settings.main.externalcommands.description")
		icon="fa-terminal"
		notes=(t "settings.main.externalcommands.notes")
	}}
		{{check-box
			(t "settings.main.externalcommands.checkbox")
			checked=model.gui.externalcommands
		}}
	{{/settings-row}}
{{/if}}
</fieldset>