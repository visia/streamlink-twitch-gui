{
	"vlc": {
		"exec": {
			"win32": "vlc.exe",
			"darwin": "VLC",
			"linux": "vlc"
		},
		"fallback": {
			"win32": [
				"%PROGRAMFILES%\\VideoLAN\\VLC",
				"%PROGRAMFILES(X86)%\\VideoLAN\\VLC"
			],
			"darwin": [
				"/Applications/VLC.app/Contents/MacOS"
			],
			"linux": [
				"/usr/bin",
				"/usr/local/bin"
			]
		},
		"params": [
			{
				"name": "instance",
				"icon": "fa-clone",
				"type": "boolean",
				"default": true,
				"args": {
					"win32": "--no-one-instance",
					"darwin": false,
					"linux": "--no-one-instance"
				}
			},
			{
				"name": "close",
				"icon": "fa-times",
				"type": "boolean",
				"default": true,
				"args": "--play-and-exit"
			},
			{
				"name": "title",
				"icon": "fa-font",
				"type": "boolean",
				"default": true,
				"args": "--input-title-format \"{name} - {game} - {status}\""
			},
			{
				"name": "minimal",
				"icon": "fa-image",
				"type": "boolean",
				"default": false,
				"args": {
					"win32": "--qt-minimal-view",
					"darwin": false,
					"linux": "--qt-minimal-view"
				}
			}
		]
	},
	"mpv": {
		"exec": {
			"win32": "mpv.exe",
			"darwin": "mpv",
			"linux": "mpv"
		},
		"fallback": {
			"win32": [
				"%PROGRAMFILES%\\mpv",
				"%PROGRAMFILES(X86)%\\mpv"
			],
			"darwin": [
				"/Applications/mpv.app/Contents/MacOS",
				"/usr/bin",
				"/usr/local/bin"
			],
			"linux": [
				"/usr/bin",
				"/usr/local/bin"
			]
		},
		"params": [
			{
				"name": "close",
				"icon": "fa-times",
				"type": "boolean",
				"default": true,
				"args": "--keep-open=no"
			},
			{
				"name": "title",
				"icon": "fa-font",
				"type": "boolean",
				"default": true,
				"args": "--title \"$>{name} - {game} - {status}\""
			},
			{
				"name": "minimal",
				"icon": "fa-square-o",
				"type": "boolean",
				"default": false,
				"args": "--no-border"
			},
			{
				"name": "window",
				"icon": "fa-image",
				"type": "boolean",
				"default": true,
				"args": "--force-window"
			},
			{
				"name": "seeking",
				"icon": "fa-forward",
				"type": "boolean",
				"default": true,
				"args": "--force-seekable=yes --hr-seek=yes --hr-seek-framedrop=yes"
			},
			{
				"name": "no-cache",
				"icon": "fa-hourglass-half",
				"type": "boolean",
				"default": false,
				"args": "--no-cache"
			}
		]
	},
	"mpc": {
		"exec": {
			"win32": [
				"mpc-hc64.exe",
				"mpc-hc.exe"
			],
			"darwin": false,
			"linux": false
		},
		"fallback": {
			"win32": [
				"%PROGRAMFILES%\\MPC-HC",
				"%PROGRAMFILES(X86)%\\MPC-HC",
				"%PROGRAMFILES%\\K-Lite Codec Pack\\MPC-HC64",
				"%PROGRAMFILES%\\K-Lite Codec Pack\\MPC-HC",
				"%PROGRAMFILES(X86)%\\K-Lite Codec Pack\\MPC-HC64",
				"%PROGRAMFILES(X86)%\\K-Lite Codec Pack\\MPC-HC",
				"%PROGRAMFILES%\\K-Lite Codec Pack\\Media Player Classic",
				"%PROGRAMFILES(X86)%\\K-Lite Codec Pack\\Media Player Classic"
			]
		},
		"params": [
			{
				"name": "instance",
				"icon": "fa-clone",
				"type": "boolean",
				"default": true,
				"text": "",
				"args": "/new"
			},
			{
				"name": "close",
				"icon": "fa-times",
				"type": "boolean",
				"default": true,
				"args": "/play /close"
			}
		]
	},
	"potplayer": {
		"exec": {
			"win32": [
				"PotPlayerMini64.exe",
				"PotPlayerMini.exe"
			],
			"darwin": false,
			"linux": false
		},
		"fallback": {
			"win32": [
				"%PROGRAMFILES%\\DAUM\\PotPlayer",
				"%PROGRAMFILES(X86)%\\DAUM\\PotPlayer"
			]
		},
		"params": []
	}
}
